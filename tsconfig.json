{
    "compilerOptions": {
        "outDir": "./dist/",
        "baseUrl": "src",
        "sourceMap": true,
        "noImplicitAny": false,
        "module": "commonjs",
        "target": "es5",
        "jsx": "react",
        "lib": ["es5", "es6", "dom"],
        "esModuleInterop": true,
        "paths": {
            "@src/*": ["./src/components/*"]
        }
    },
    "include": [
        "./src/**/*"
    ],
    "awesomeTypescriptLoaderOptions": {
        "reportFiles": [
            "./src/**/*"
        ]
    }
}
