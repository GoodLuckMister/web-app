{
    "name": "topipro-web-app",
    "version": "0.1.0",
    "description": "Web application for TopiPro product",
    "keywords": [
        "react",
        "webpack",
        "typescript",
        "babel",
        "sass",
        "hmr",
        "starter",
        "boilerplate",
        "mobx"
    ],
    "author": "Yohay Nahmany",
    "scripts": {
        "build": "yarn run clean-dist && webpack -p --config=configs/webpack/prod.js",
        "clean-dist": "rimraf dist/*",
        "lint": "eslint --fix .",
        "format": "prettier --write './**/*.{js,jsx,ts,tsx,css,md,json}' --config ./.prettierrc",
        "start": "yarn run start-dev",
        "start-dev": "webpack-dev-server --config=configs/webpack/dev.js",
        "start-prod": "yarn run build && node express.js",
        "test": "jest --coverage --watchAll --config=configs/jest.json"
    },
    "devDependencies": {
        "@babel/cli": "^7.12.8",
        "@babel/core": "^7.12.9",
        "@babel/preset-env": "^7.12.7",
        "@babel/preset-react": "^7.12.7",
        "@types/express": "^4.17.9",
        "@types/jest": "^26.0.20",
        "@types/node": "^14.14.10",
        "@types/react": "^17.0.0",
        "@types/react-dom": "^17.0.0",
        "@types/react-router-dom": "^5.1.7",
        "@typescript-eslint/eslint-plugin": "^4.9.0",
        "@typescript-eslint/parser": "^4.9.0",
        "awesome-typescript-loader": "^5.2.1",
        "babel-loader": "^8.2.2",
        "css-loader": "^5.0.1",
        "eslint": "^7.15.0",
        "eslint-config-prettier": "^6.15.0",
        "eslint-plugin-jsx-a11y": "^6.4.1",
        "eslint-plugin-prettier": "^3.2.0",
        "eslint-plugin-react": "^7.21.5",
        "eslint-plugin-react-hooks": "^4.2.0",
        "eslint-plugin-simple-import-sort": "^7.0.0",
        "express": "^4.17.1",
        "file-loader": "^6.2.0",
        "html-webpack-plugin": "^4.5.0",
        "husky": "^4.3.6",
        "image-webpack-loader": "^7.0.1",
        "imagemin-gifsicle": "6.0.1",
        "jest": "^26.6.3",
        "lint-staged": "^10.5.3",
        "node-sass": "^4.14.1",
        "prettier": "^2.2.1",
        "react": "^17.0.1",
        "react-dom": "^17.0.1",
        "react-hot-loader": "^4.13.0",
        "rimraf": "^3.0.2",
        "sass-loader": "^10.1.0",
        "style-loader": "^2.0.0",
        "typescript": "^3.9.7",
        "uglifyjs-webpack-plugin": "^2.2.0",
        "webpack": "^4.43.0",
        "webpack-cli": "^3.3.12",
        "webpack-dev-middleware": "^3.7.2",
        "webpack-dev-server": "^3.11.0",
        "webpack-merge": "^4.2.2"
    },
    "dependencies": {
        "@emotion/react": "^11.1.4",
        "@emotion/styled": "^11.0.0",
        "@types/d3-shape": "^2.0.0",
        "@types/react-select": "^4.0.13",
        "d3-scale": "^3.2.3",
        "d3-shape": "^2.0.0",
        "firebase": "^8.2.5",
        "framer-motion": "^3.2.1",
        "immer": "^8.0.1",
        "mobx": "^6.0.4",
        "mobx-react": "^7.0.5",
        "mobx-react-lite": "^3.1.6",
        "react-custom-scrollbars": "^4.2.1",
        "react-responsive": "^9.0.0-beta.4",
        "react-ripples": "^2.2.1",
        "react-router-dom": "^5.2.0",
        "react-select": "^4.1.0",
        "react-spinners": "^0.10.6",
        "react-svg-unique-id": "^1.3.3",
        "react-toastify": "^7.0.3",
        "react-tooltip": "^4.2.13",
        "reaviz": "^9.5.4",
        "use-immer": "^0.4.2",
        "uuid": "^8.3.2"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "./**/*.{js,jsx,ts,tsx}": [
            "eslint --fix"
        ]
    }
}
